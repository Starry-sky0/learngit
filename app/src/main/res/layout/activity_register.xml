<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/denglubeijing"
    tools:context=".UserRegister">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:text="注册页面"
        android:textColor="#F0F8FF"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/btn_1"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:text="用户名："
        android:textSize="20dp"
        android:textColor="#F0F8FF"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="100dp"
        />
    <EditText
        android:id="@+id/ed3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_1"
        android:layout_alignBottom="@id/btn_1"
        android:layout_marginTop="20dp"
        android:hint="请输入用户名"
        android:textColorHint="#F0F8FF"
        />
    <TextView
        android:id="@+id/btn_2"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:text=" 密  码 ："
        android:textColor="#F0F8FF"
        android:textSize="20dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/btn_1"
        />
    <EditText
        android:id="@+id/ed4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_toRightOf="@id/btn_2"
        android:layout_alignBottom="@id/btn_2"
        android:layout_marginTop="10dp"
        android:hint="请输入密码"
        android:textColorHint="#F0F8FF"
        />
    <Button
        android:id="@+id/btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="100dp"
        />
    <Button
        android:id="@+id/btn_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"
        android:layout_toRightOf="@id/btn_5"
        android:layout_alignBottom="@id/btn_5"
        />
    <Button
        android:id="@+id/btn_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生成数据库"
        android:layout_alignBottom="@id/btn_5"
        android:layout_toRightOf="@id/btn_6"
        />

</RelativeLayout>