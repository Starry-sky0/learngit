<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/denglubeijing"
    tools:context=".UserLogin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="100dp"
            android:text="登陆页面"
            android:textColor="#F0F8FF"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/tx_1"
            android:layout_width="83dp"
            android:layout_height="40dp"
            android:text="用户名："
            android:textColor="#F0F8FF"
            android:textSize="20dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="100dp"
            />
        <EditText
            android:id="@+id/ed_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tx_1"
            android:layout_alignBottom="@id/tx_1"
            android:layout_marginTop="20dp"
            android:hint="请输入用户名"
            android:textColorHint="#F0F8FF"
            />
        <TextView
            android:id="@+id/tx_2"
            android:layout_width="83dp"
            android:layout_height="40dp"
            android:text=" 密  码 ："
            android:textColor="#F0F8FF"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:layout_below="@id/tx_1"
            />
        <EditText
            android:id="@+id/ed_2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_toRightOf="@id/tx_2"
            android:layout_alignBottom="@id/tx_2"
            android:layout_marginTop="10dp"
            android:hint="请输入密码"
            android:textColorHint="#F0F8FF"
            />
        <Button
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="120dp"
            />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_toRightOf="@id/btn_1"
            android:layout_alignBottom="@id/btn_1"
            />



</RelativeLayout>